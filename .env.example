# ========================================
# SCIL - Configuración de Entorno
# ========================================
# Copiar este archivo a .env y personalizar los valores

# Entorno de ejecución (development/production)
SCIL_ENV=development

# ========================================
# Seguridad
# ========================================
# Clave secreta para sesiones Flask (generar una única y segura)
SCIL_SECRET_KEY=cambiar_por_clave_secreta_aleatoria

# Contraseña de acceso al sistema
SCIL_PASSWORD=scil2024

# ========================================
# Servidor Web
# ========================================
# Host donde escuchará el servidor (0.0.0.0 = todas las interfaces)
SCIL_HOST=0.0.0.0

# Puerto del servidor
SCIL_PORT=4050

# Modo debug (True/False) - NUNCA usar True en producción
SCIL_DEBUG=False

# ========================================
# Logging
# ========================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SCIL_LOG_LEVEL=INFO

# ========================================
# Interfaz
# ========================================
# Número de resultados por página
SCIL_RESULTS_PER_PAGE=20
